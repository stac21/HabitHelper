<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/streak_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/streak_title"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/streak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/streak_title"
        android:layout_toEndOf="@id/streak_title"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/grade_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/streak"
        android:layout_toEndOf="@id/streak"
        android:layout_marginLeft="10dp"
        android:text="@string/grade_title"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/grade_title"
        android:layout_toEndOf="@id/grade_title"
        android:textSize="20sp"/>
</RelativeLayout>